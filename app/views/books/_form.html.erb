<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre , ['Action and Adventure', 'Art', 'Anthology', 'Biography', 'Business/Economics', 'Crafts/Hobbies', 'Classic', 'Cookbook', 'Crime', 'Dictionary', 'Drama', 'Encyclopedia', 'Fantasy', 'Graphic Novel', 'Guide', 'Health/Fitness', 'History', 'Home and Garden', 'Historical Fiction', 'Humor', 'Horror', 'Journal', 'Memoir', 'Mystery', 'Philosophy', 'Poetry', 'Political', 'Religion', 'Romance', 'Satire', 'Science', 'Science fiction', 'Self help', 'Short Story', 'Suspense', 'Textbook', 'Thriller', 'Travel', 'True Crime', 'Western', 'Young Adult'] , include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :published_date %>
    <%= form.date_select :published_date, :start_year => 1800, :end_year => Date.today.year %>
    <%# <%= form.date_field :published_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
